{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
